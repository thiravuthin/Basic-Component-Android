    <solid android:color="@color/purple_700" />

    <corners
        android:radius="100dp"
        android:bottomLeftRadius="200dp"
        android:bottomRightRadius="100dp"
        android:topLeftRadius="100dp"
        android:topRightRadius="50dp" />

    <gradient
        android:angle="@integer/material_motion_duration_long_1"
        android:centerColor="@color/purple_700"
        android:centerX="@integer/material_motion_duration_long_1"
        android:centerY="@integer/material_motion_duration_medium_1"
        android:endColor="@color/black"
        android:gradientRadius="@dimen/cardview_default_radius"
        android:startColor="@color/black"
        android:type="sweep"
        android:useLevel="false" />
    <padding
        android:bottom="100dp"
        android:left="100dp"
        android:right="20dp"
        android:top="10000dp" />

    <size
        android:width="100dp"
        android:height="200dp" />

