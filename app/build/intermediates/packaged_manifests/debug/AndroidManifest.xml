            android:exported="true" />
        <activity
            android:name="com.example.designui.animation.TweenAnimationActivity"
            android:exported="true" />
        <activity
            android:name="com.example.designui.styles.Shape1Activity"
            android:exported="true" />
        <activity
            android:name="com.example.designui.images.ImageViewActivity"
            android:exported="true" />
        <activity
            android:name="com.example.designui.datetimepicker.DateTimePickerActivity"
            android:exported="true" />
        <activity
            android:name="com.example.designui.spinner.SpinnerActivity2"
            android:exported="true" />
        <activity
            android:name="com.example.designui.spinner.SpinnerActivity"
            android:exported="true" />
        <activity
            android:name="com.example.designui.PracticeActivity"
            android:exported="true" />
        <activity
            android:name="com.example.designui.edittext.EditextActivity"
